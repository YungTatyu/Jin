{
  "name": "@keystonehq/alias-sampling",
  "version": "0.1.2",
  "description": "A Node.js module for efficient sampling from a discrete probability distribution using the alias method.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "keywords": [
    "alias method",
    "sampling",
    "probability distribution",
    "random",
    "statistics",
    "math",
    "discrete distribution"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "build": "pnpm run clean && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "clean": "rimraf ./dist",
    "release": "pnpm run build && pnpm publish --no-git-checks --access public",
    "test": "jest"
  }
}