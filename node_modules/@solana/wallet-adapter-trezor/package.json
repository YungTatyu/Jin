{
  "name": "@solana/wallet-adapter-trezor",
  "version": "0.1.2",
  "author": "Solana Maintainers <maintainers@solana.foundation>",
  "repository": "https://github.com/anza-xyz/wallet-adapter",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./lib/cjs/index.js",
